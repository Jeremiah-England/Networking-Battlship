<Window x:Class="BattleshipClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleshipClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1025" Loaded="Window_Loaded">
    <StackPanel x:Name="panel" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal" >
        <StackPanel x:Name="panelMargin">
            <TextBlock Text="filler" />
        </StackPanel>
        <StackPanel x:Name="connectPanel" VerticalAlignment="Top" HorizontalAlignment="Left" >
            <TextBlock Text="Server Name:" Foreground="BlanchedAlmond"/>
            <TextBox x:Name="txtServerName" Text="localhost" />
            <Button Content="Connect" Click="btnConnect_Click"/>
            <Button Content="Refresh" Click="btnRefresh_Click" />

        </StackPanel>
         
    </StackPanel>
</Window>
